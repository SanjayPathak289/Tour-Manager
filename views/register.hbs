<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/register.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Register</title>
</head>
<body>
    {{> navbar}}

    <div class="formContainer">

    <div id="leftform">
        <svg id="svg1" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path fill="#92c0ff" d="M34.3,-44C44.2,-32.6,51.9,-21.5,59.4,-6.4C66.9,8.7,74.3,27.9,69.3,43.3C64.4,58.6,47,70.1,30.3,70.7C13.6,71.3,-2.5,61.1,-21.3,55.6C-40.1,50,-61.7,49,-71.6,38.3C-81.4,27.5,-79.6,6.9,-73.6,-10.5C-67.6,-27.9,-57.5,-42.2,-44.5,-53.1C-31.6,-64,-15.8,-71.5,-1.8,-69.3C12.2,-67.2,24.4,-55.4,34.3,-44Z" transform="translate(100 100)" />
        </svg>


        <p>WELCOME</p>

        <svg id="svg2" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path fill="#92c0ff" d="M36.1,-37.7C47.7,-24.4,58.9,-12.2,60.7,1.8C62.6,15.9,55.1,31.7,43.4,41.4C31.7,51,15.9,54.5,-2.7,57.2C-21.2,59.8,-42.4,61.7,-54.9,52C-67.5,42.4,-71.5,21.2,-69.3,2.1C-67.2,-16.9,-59,-33.9,-46.4,-47.2C-33.9,-60.5,-16.9,-70.2,-2.4,-67.8C12.2,-65.4,24.4,-51,36.1,-37.7Z" transform="translate(100 100)" />
        </svg>
    </div>

    <div id="rightform">

            <div id="alertUser">
                <button id="crossBtn" onclick="hide()">X</button>
                {{!-- <button id="crossBtn" onclick="hide()">Invalid Username/Password</button> --}}
            </div>


        <div id="register_div">

            <div id="borderBtn">
            <button id="registerBtn" class="btn">Register</button>
            <button id="loginBtn" class="btn">Login</button>
        </div>
    <div id="formdiv">

        <form action="/register" method="post" id="form_register" class="form" enctype="multipart/form-data">
        
           <span>
                Username &nbsp; <input type="text" name="username" required>
           </span>
            <span>
                Password &nbsp; <input type="password" name="password" required>
            </span>
            <span>
                Confirm Password &nbsp; <input type="password" name="confirmpassword" required>
            </span>
            <span>
                Profile Picture &nbsp; <input type="file" name="file" accept="image/*">
            </span>
            <div>
                <button type="submit" id="registerSubmit">Submit</button>
            </div>
        </form>



        <form action="/login" method="post" id="form_login" class="form">
        
           <span>
                Username &nbsp; <input type="text" name="username" required>
           </span>
            <span>
                Password &nbsp; <input type="password" name="password" required>
            </span>
            
            <div>
                <button type="submit">Submit</button>
            </div>
        </form>


    </div>

    </div>
    </div>
    </div>
    <div style="width:-5rem">
        {{>footer}}

    </div>

</body>
<script>
    const register = document.getElementById("registerBtn");
    const login = document.getElementById("loginBtn");
    const form_register = document.getElementById("form_register");
    const form_login = document.getElementById("form_login");
    const alertUser = document.getElementById("alertUser");
    const crossBtn = document.getElementById("crossBtn");

    login.addEventListener("click",() => {
        form_login.style.display = "flex";
        form_register.style.display = "none";
        register.style.boxShadow = "none";
        login.style.boxShadow = "inset 0 0 0 1000px rgb(92, 156, 246)";
        login.style.color = "white"
        register.style.color = "black"
    })
    register.addEventListener("click",() => {
        form_register.style.display = "flex";
        form_login.style.display = "none";
        login.style.boxShadow = "none";
        register.style.boxShadow = "inset 0 0 0 1000px rgb(92, 156, 246)";
        register.style.color = "white"
        login.style.color = "black"
    })

    if("{{data}}"){
        crossBtn.style.display = "block"
        alertUser.innerHTML += "{{data}}";
        alertUser.style.padding = "20px"
    }

    if("{{wronguser}}"){
        crossBtn.style.display = "block"
        alertUser.innerHTML += "{{wronguser}}";
        alertUser.style.padding = "20px"

        form_login.style.display = "flex";
        form_register.style.display = "none";
        register.style.boxShadow = "none";
        login.style.boxShadow = "inset 0 0 0 1000px rgb(92, 156, 246)";
        login.style.color = "white"
        register.style.color = "black"

    }
    function hide(){
        alertUser.style.display = "none"
    }
    
    
    
</script>
</html>